<Window x:Class="todolistveronn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:todolistveronn"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800">

    <Grid>
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
                <Button Content="Создать задачу"
                        Width="110" Height="30"
                        Margin="0,0,5,0"
                        Click="CreateTask_Click"/>
                <Button Content="Сортировать"
                        Width="110" Height="30"/>
            </StackPanel>

            <DataGrid x:Name="tgTodo"
                      FontSize="16"
                      FontWeight="Bold"
                      AutoGenerateColumns="False"
                      Height="507">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Выполнено" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="{Binding Status}" 
                    Click="ToggleCompleted_Click"
                    FontSize="16"
                    Background="Transparent"
                    BorderThickness="0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Задача" Binding="{Binding Title}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="120"/>
                    <DataGridTextColumn Header="Срок" Binding="{Binding DueDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                    <DataGridTextColumn Header="Приоритет" Binding="{Binding Priority}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
