<Window x:Class="todolistveronn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:todolistveronn"
        mc:Ignorable="d"
        Title="ToDoList" Height="650" Width="800">

    <Grid>
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
                <Button Content="Создать задачу" Width="110" Height="30" Margin="0,0,5,0" Click="CreateTask_Click"/>
                <Button Content="Удалить" Width="110" Height="30" Click="DeleteTask_Click"/>
            </StackPanel>

            <DataGrid x:Name="tgTodo"
                      FontSize="16"
                      FontWeight="Bold"
                      AutoGenerateColumns="False"
                      Height="507">

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSubtask}" Value="True">
                                <Setter Property="Background" Value="#FFF5F5F5"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="30">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="{Binding Status}" Click="ToggleCompleted_Click" FontSize="16" Background="Transparent" BorderThickness="0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Задача" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock FontSize="16" Text="{Binding Title}" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding SubTasksText}" 
                                               Foreground="Gray" 
                                               FontSize="14" 
                                               Margin="20,0,0,0"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="120"/>
                    <DataGridTextColumn Header="Срок" Binding="{Binding DueDate, StringFormat=dd.MM.yyyy}" Width="90"/>
                    <DataGridTextColumn Header="Приоритет" Binding="{Binding Priority}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
